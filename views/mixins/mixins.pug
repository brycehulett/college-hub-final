mixin createChatImage(chatData, userLoggedIn)
    if(!chatData)
        return
    - var cnt = 0
    - var users = 4 // sets the number of users to show(excluding us)
    .chatImagesContainer
        if chatData.users.length > users
            .userCount
                span +#{chatData.users.length - users - 1}
        each user in chatData.users
            if chatData.users.length != 1 && user._id == userLoggedIn._id
                - continue
            else if cnt >= users
                - break
            - cnt++
            img(src=user.profilePic, alt="User's Profile Picture", title=user.firstName)

